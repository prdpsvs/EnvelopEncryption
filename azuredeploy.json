{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Synapse/workspaces/bigDataPools",
      "apiVersion": "2019-06-01-preview",
      "name": "pvenkat-test-ws/testpoolsparkconf",
      "location": "westeurope",
      "dependsOn": [
        "pvenkat-test-ws"
      ],
      "properties": {
        "nodeCount": 5,
        "nodeSizeFamily": "MemoryOptimized",
        "nodeSize": "Small",
        "autoScale": {
          "enabled": true,
          "minNodeCount": 3,
          "maxNodeCount": 5
        },
        "autoPause": {
          "enabled": true,
          "delayInMinutes": 15
        },
        "sparkVersion": "3.1",
        "libraryRequirements":{
            "content": "",
            "filename": "requirements.txt"
        }
      }
    }
  ]
}